<UserControl x:Class="Dispatcher.Views.QuickIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:Sigmar.Controls;assembly=Sigmar" 
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="240">
    <Grid>        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="72"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        
        <Ellipse Margin="0" Stroke="Black" StrokeThickness="0" Fill="{Binding IconBackGround, Mode=OneWay}" Grid.Row="1" Grid.Column="1" />
        <Image Source="{Binding Icon, Mode=OneWay}" Opacity="{Binding ViewModule.OnlineOpacity, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="None" Grid.Row="1" Grid.Column="1" />
        <TextBlock Text="{Binding Name, Mode=OneWay}"  HorizontalAlignment="Center" Foreground="#FFC9CDD2"  FontSize="14" VerticalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="3"/>

    </Grid>
</UserControl>
