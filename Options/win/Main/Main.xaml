    										<TextBlock TextWrapping="Wrap" Text="该地址用于客户端访问" DockPanel.Dock="Top" Margin="0,2.5"/>
    										<Grid DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,2.5">
    											<Grid.ColumnDefinitions>
    												<ColumnDefinition Width="80"/>
    												<ColumnDefinition Width="*"/>
    											</Grid.ColumnDefinitions>
    											<Label Content="IP Address :" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Left"/>
    											<TextBox x:Name="txt_SvrIp1" TextWrapping="Wrap" HorizontalAlignment="Left" Padding="0,2.5" Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="1" Width="120"/>
    										</Grid>
    										<Grid DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,2.5">
    											<Grid.ColumnDefinitions>
    												<ColumnDefinition Width="80"/>
    												<ColumnDefinition Width="*"/>
    											</Grid.ColumnDefinitions>
    											<Label Content="Port :" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Right"/>
