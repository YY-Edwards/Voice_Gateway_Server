    									<DockPanel x:Name="dck_WireLanGeneric" LastChildFill="False" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="20,10,20,30">
    										<Label  Content="常规" Margin="20,0,0,0" DockPanel.Dock="Top" FontSize="16"/>
    										<Separator Height="5" Margin="-20,0,-20,2.5" VerticalAlignment="Top" DockPanel.Dock="Top" Padding="0,2.5"/>
    										<TextBlock TextWrapping="Wrap" Text="使能/禁用WireLan调度功能" Margin="20,2.5,0,2.5" Width="551.087" DockPanel.Dock="Top"/>
    										<CheckBox x:Name="chk_EnableWireLan" Content="WireLan调度" Margin="20,2.5,0,2.5" HorizontalAlignment="Left" VerticalAlignment="Top" DockPanel.Dock="Top" IsChecked="True"/>
