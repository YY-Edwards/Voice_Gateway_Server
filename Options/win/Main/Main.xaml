    										</Grid>
    									</DockPanel>
    									<DockPanel x:Name="dck_BaseLog" LastChildFill="False" DockPanel.Dock="Top" VerticalAlignment="Top" Margin="20,10,20,30">
    										<Label  Content="日志存储" Margin="0" DockPanel.Dock="Top" FontSize="16"/>
    										<Separator Height="5" Margin="-20,0,-20,2.5" VerticalAlignment="Top" DockPanel.Dock="Top"/>
    										<TextBlock TextWrapping="Wrap" Text="该地址用于访问日志服务" DockPanel.Dock="Top" Margin="0,2.5"/>
