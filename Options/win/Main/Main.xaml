    											<Grid.ColumnDefinitions>
    												<ColumnDefinition Width="20*"/>
    												<ColumnDefinition Width="20*"/>
    												<ColumnDefinition Width="20*"/>
    												<ColumnDefinition Width="20*"/>
    												<ColumnDefinition Width="20*"/>
    											</Grid.ColumnDefinitions>
    											<CheckBox Content="通话记录" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    											<CheckBox Content="短消息记录" Margin="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    											<CheckBox Content="位置信息记录" Margin="0" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    											<CheckBox Content="控制记录" Margin="0" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    										</Grid>
    										<Grid DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,10,0,2.5" Visibility="Collapsed">
    											<Grid.ColumnDefinitions>
    												<ColumnDefinition Width="80"/>
    												<ColumnDefinition Width="330"/>
    												<ColumnDefinition Width="*"/>
    											</Grid.ColumnDefinitions>
    											<Label Content="储存路径 :" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Right"/>
    											<TextBox x:Name="txt_SvrIp8" TextWrapping="Wrap" HorizontalAlignment="Left" Padding="0,2.5" Margin="5,1.5,0,1.5" VerticalAlignment="Center" Grid.Column="1" Width="320"/>
    											<Button Content="浏览" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Grid.Column="2" Height="20" Margin="5,0,0,0"/>
    										</Grid>
    									</DockPanel>
    								</DockPanel>
    							</ScrollViewer>
    						</TabItem>
    						<TabItem Header="Radio配置">
                                <ScrollViewer x:Name="scrview_Radio" VerticalScrollBarVisibility="Auto" Padding="20,2.5" Height="405" Margin="0">
                                    <DockPanel LastChildFill="False" Margin="0">
                                        <DockPanel x:Name="dck_RadioGeneric" LastChildFill="False" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="20,10,20,30">
                                            <Label Content="常规" Margin="0" DockPanel.Dock="Top" FontSize="16"/>
                                            <Separator Height="5" Margin="-20,0,-20,2.5" VerticalAlignment="Top" DockPanel.Dock="Top" Padding="0,2.5"/>
                                            <TextBlock TextWrapping="Wrap" Text="使能/禁用Radio调度功能" Margin="0,2.5" Width="551.087" DockPanel.Dock="Top"/>
                                            <CheckBox x:Name="chk_EnableRadio" Content="Radio调度" Margin="20,2.5,0,2.5" HorizontalAlignment="Left" VerticalAlignment="Top" DockPanel.Dock="Top" IsChecked="True"/>
                                            <TextBlock TextWrapping="Wrap" Text="选择车载台工作模式" Margin="0,10,0,2.5" Width="551.087" DockPanel.Dock="Top" Visibility="{Binding IsChecked, Converter={StaticResource FalselHideConverter}, ElementName=chk_EnableRadio}"/>
                                            <Grid VerticalAlignment="Top" Margin="20,2.5,0,2.5" DockPanel.Dock="Top" Visibility="{Binding IsChecked, Converter={StaticResource FalselHideConverter}, ElementName=chk_EnableRadio}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="83*"/>
                                                    <ColumnDefinition Width="468*"/>
                                                </Grid.ColumnDefinitions>
                                                <RadioButton x:Name="rad_RadioType" Content="车载台" HorizontalAlignment="Left" VerticalAlignment="Top" Height="14.24" Width="55" GroupName="RadioType" IsChecked="True"/>
                                                <RadioButton x:Name="rad_RadioMnisType" Content="车载台+MNIS"  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Height="14.24" Width="95.833" GroupName="RadioType"/>
                                            </Grid>
                                        </DockPanel>
                                        <DockPanel x:Name="dck_RadioNetwork" LastChildFill="False" DockPanel.Dock="Top" VerticalAlignment="Top" Margin="20,10,20,30" Visibility="{Binding IsChecked, Converter={StaticResource FalselHideConverter}, ElementName=chk_EnableRadio}">
                                        	<Label Content="网络" Margin="0" DockPanel.Dock="Top" FontSize="16"/>
                                        	<Separator Height="5" Margin="-20,0,-20,2.5" VerticalAlignment="Top" DockPanel.Dock="Top" Padding="0,2.5"/>
                                        	<TextBlock TextWrapping="Wrap" Text="该地址用于设备（车台）连接" DockPanel.Dock="Top" Margin="0,2.5"/>
                                        	<Grid DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,2.5">
                                        		<Grid.ColumnDefinitions>
                                        			<ColumnDefinition Width="80"/>
                                        			<ColumnDefinition Width="*"/>
                                        		</Grid.ColumnDefinitions>
                                        		<Label Content="IP Address :" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Right"/>
                                        		<TextBox x:Name="txt_SvrIp4" TextWrapping="Wrap" HorizontalAlignment="Left" Padding="0,2.5" Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="1" Width="120"/>
                                        	</Grid>
                                        	<Grid DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,2.5">
                                        		<Grid.ColumnDefinitions>
                                        			<ColumnDefinition Width="80"/>
                                        			<ColumnDefinition Width="*"/>
                                        		</Grid.ColumnDefinitions>
                                        		<Label Content="Port :" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Right"/>
                                        		<TextBox x:Name="txt_SvrPort1" TextWrapping="Wrap" HorizontalAlignment="Left" Padding="0,2.5" Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="1" Width="120"/>
                                        	</Grid>
                                        	<Label Content="该地址用于MNIS连接" VerticalAlignment="Center" Margin="0,10,0,2.5" HorizontalAlignment="Left" IsEnabled="{Binding IsChecked, ElementName=rad_RadioMnisType}" DockPanel.Dock="Top"/>
                                        	<Grid DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,2.5">
                                        		<Grid.ColumnDefinitions>
                                        			<ColumnDefinition Width="80"/>
                                        			<ColumnDefinition Width="*"/>
                                        		</Grid.ColumnDefinitions>
                                        		<Label Content="IP Address :" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Right" IsEnabled="{Binding IsChecked, ElementName=rad_RadioMnisType}"/>
                                        		<TextBox x:Name="txt_SvrIp9" TextWrapping="Wrap" HorizontalAlignment="Left" Padding="0,2.5" Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="1" Width="120" IsEnabled="{Binding IsChecked, ElementName=rad_RadioMnisType}"/>
                                        	</Grid>
                                        	<Grid DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,2.5">
                                        		<Grid.ColumnDefinitions>
                                        			<ColumnDefinition Width="80"/>
                                        			<ColumnDefinition Width="*"/>
                                        		</Grid.ColumnDefinitions>
                                        		<Label Content="Port :" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Right" IsEnabled="{Binding IsChecked, ElementName=rad_RadioMnisType}"/>
                                        		<TextBox x:Name="txt_SvrPort3" TextWrapping="Wrap" HorizontalAlignment="Left" Padding="0,2.5" Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="1" Width="120" IsEnabled="{Binding IsChecked, ElementName=rad_RadioMnisType}"/>
                                        	</Grid>
                                        </DockPanel>
                                        <DockPanel x:Name="dck_RadioFunc" LastChildFill="False" DockPanel.Dock="Top" VerticalAlignment="Top" Margin="20,10,20,30" Visibility="{Binding IsChecked, Converter={StaticResource FalselHideConverter}, ElementName=chk_EnableRadio}">
                                        	<Label Content="功能" Margin="0" DockPanel.Dock="Top" FontSize="16"/>
                                        	<Separator Height="5" Margin="-20,0,-20,2.5" VerticalAlignment="Top" DockPanel.Dock="Top" Padding="0,2.5"/>
                                        </DockPanel>
                                    </DockPanel>
                                </ScrollViewer>
                            </TabItem>
