                        </DockPanel>
                    </Border>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Type}" Value="Vehicle">
                            <Setter TargetName="Icon" Property="Source" Value="/TrboxMgr;component/resources/images/vehicle_18_18_on.png" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>

            </src:MsgView.ItemTemplate>
        </src:MsgView>


        <src:MsgView x:Key="RadioView">
            <src:MsgView.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="Msg"  Background="#00000000" ToolTip="{Binding NameInfo}" Margin="0" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Height="32">
                        <DockPanel >
                            <Image x:Name="Icon" Source="/TrboxMgr;component/resources/images/radio_18_18_on.png" Width="18" Height="18" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0" />
                            <DockPanel x:Name="dck_Content" Margin="5,0" >
