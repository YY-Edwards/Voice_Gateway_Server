    											<Grid.ColumnDefinitions>
    												<ColumnDefinition Width="80"/>
    												<ColumnDefinition Width="335*"/>
    												<ColumnDefinition Width="173*"/>
    											</Grid.ColumnDefinitions>
    											<Label Content="IP Address :" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Right"/>
    											<TextBox x:Name="txt_SvrIp2" TextWrapping="Wrap" HorizontalAlignment="Left" Padding="0,2.5" Margin="5,1.5,0,1.5" VerticalAlignment="Center" Grid.Column="1" Width="120"/>
    										</Grid>
    										<Grid DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,2.5">
    											<Grid.ColumnDefinitions>
    												<ColumnDefinition Width="80"/>
    												<ColumnDefinition Width="335*"/>
    												<ColumnDefinition Width="173*"/>
    											</Grid.ColumnDefinitions>
    											<Label Content="Port :" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Right"/>
    											<TextBox x:Name="txt_SvrIp3" TextWrapping="Wrap" HorizontalAlignment="Left" Padding="0,2.5" Margin="5,1.5,0,1.5" VerticalAlignment="Center" Grid.Column="1" Width="120"/>
